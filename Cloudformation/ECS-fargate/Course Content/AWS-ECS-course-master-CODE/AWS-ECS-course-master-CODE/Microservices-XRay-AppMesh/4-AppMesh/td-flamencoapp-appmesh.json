{
    "family": "td-flamencoapp",
    "memory" : "1024",
    "cpu" : "0.5 vCPU",
    "requiresCompatibilities": [ "FARGATE" ],
    "networkMode": "awsvpc",
    "executionRoleArn": "arn:aws:iam::Add-Your_Account_ID:role/ecsTaskExecutionRole",
    "taskRoleArn": "arn:aws:iam::Add-Your_Account_ID:role/ecsTaskRole",
    "proxyConfiguration":{
        "type": "APPMESH",
        "containerName": "envoy",
        "properties": [
          {
            "name": "IgnoredUID",
            "value": "1337"
          },
          {
            "name": "ProxyIngressPort",
            "value": "15000"
          },
          {
            "name": "ProxyEgressPort",
            "value": "15001"
          },
          {
            "name": "AppPorts",
            "value": "80"
          },
          {
            "name": "EgressIgnoredIPs",
            "value": "169.254.170.2,169.254.169.254"
          }
        ]
    },
    "containerDefinitions": [
        {
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                  "awslogs-group": "/ecs/microservice-demo",
                  "awslogs-region": "us-west-2",
                  "awslogs-stream-prefix": "ecs"
                }
            },
            "portMappings": [
                {
                    "protocol": "tcp",
                    "containerPort": 80
                }
            ],
            "environment": [
                {
                    "name": "PORT",
                    "value": "80"
                }
            ],
            "memory": 128,
            "image": "pauloclouddev/flamencoapp:latest",
            "essential": true,
            "dependsOn": [
              {
                "containerName": "envoy",
                "condition": "HEALTHY"
              }
            ],
            "name": "flamencoapp"
        },
        {
          "name": "envoy",
          "image": "840364872350.dkr.ecr.us-west-2.amazonaws.com/aws-appmesh-envoy:v1.12.3.0-prod",
          "user": "1337",
          "memoryReservation": 128,
          "essential": true,
          "environment": [
            {
              "name": "APPMESH_VIRTUAL_NODE_NAME",
              "value": "mesh/musicbox-mesh/virtualNode/flamenco-service-vn"
            },
            {
              "name": "ENABLE_ENVOY_XRAY_TRACING",
              "value": "1"
            },
            {
              "name": "ENABLE_ENVOY_STATS_TAGS",
              "value": "1"
            }
          ],
          "logConfiguration": {
            "logDriver": "awslogs",
            "options": {
              "awslogs-group": "/ecs/microservice-demo",
              "awslogs-region": "us-west-2",
              "awslogs-stream-prefix": "/flamenco/envoy"
            }
          },
          "healthCheck": {
            "command": [
              "CMD-SHELL",
              "curl -s http://localhost:9901/server_info | grep state | grep -q LIVE"
            ],
            "interval": 5,
            "timeout": 2,
            "retries": 3
          }
        },
        {
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                  "awslogs-group": "/ecs/microservice-demo",
                  "awslogs-region": "us-west-2",
                  "awslogs-stream-prefix": "flamenco/xray"
                }
            },
            "portMappings": [
            {
              "protocol": "udp",
              "containerPort": 2000
            }
          ],
          "cpu": 32,
          "memoryReservation": 256,
          "image": "amazon/aws-xray-daemon",        
          "name": "xray-daemon"
        }
    ]
}